
<div class="container">
    <br>
      {{!-- <div class="jumbotron"> --}}
      <div id = "header">
        <h1>Burgers Express!
          <i class="fas fa-hamburger"></i>
        </h1>
      </div>
      {{!-- </div> --}}
    
      <div class="row justify-content-around" style = "background-color:#a16868; border-radius:10%;">
        <div class="col-lg-6">
          <h2>Burgers Not Eaten</h2>
            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block notdevoured=true}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">
          <h2 style="">Burgers Eaten</h2>
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block notdevoured=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
      </div>

    <div class="row justify-content-around">
      <div class="col-6 addburger">

        <h2 style="background-color: #ff6347; margin-top:2%; border-radius:10%">Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burg" style="font-size: 20px">Burger Name:</label>
            <input type="text" id="burg" name="name">
          </div>
          <button type="submit" class="buttonadd">Add Burger!</button>
        </form>

      </div>

      <div class="col-6 checkreviews">
        <h2 style="background-color: #ff6347; margin-top:2%; border-radius:10%">Check Reviews!</h2>
          <a target="_blank" href="/reviews">
            <button type="button" class="btn-lg btn-primary reviews" style="margin-top:2%">
                <h4>
                    Reviews
                </h4>
            </button>
          </a>
      </div>

    </div>

 </div>